{
  "name": "vscode-hackmd",
  "displayName": "HackMD",
  "description": "The official HackMD Markdown VSCode extension",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "publisher": "HackMD",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#333333",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:HackMD.createCodeSnippet",
    "onView:mdTreeItems",
    "onCommand:HackMD.login",
    "onCommand:HackMD.logout",
    "onCommand:HackMD.createActiveEditorContentToHackMD",
    "onCommand:HacKMD.openNoteOnHackMD"
  ],
  "license": "MIT",
  "homepage": "https://github.com/hackmdio/vscode-hackmd/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/hackmdio/vscode-hackmd/issues",
    "email": "hackmdio@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hackmdio/vscode-hackmd.git"
  },
  "extensionDependencies": [
    "bierner.markdown-preview-github-styles",
    "bierner.markdown-emoji",
    "bierner.emojisense",
    "bierner.markdown-image-size",
    "bierner.markdown-footnotes",
    "bierner.markdown-checkbox"
  ],
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "HackMD",
      "properties": {
        "HackMD.apiEndPoint": {
          "type": "string",
          "default": "https://api.hackmd.io/v1/",
          "markdownDescription": "Specify the API endpoint for official instance or HackMD EE"
        }
      }
    },
    "markdown.markdownItPlugins": true,
    "markdown.previewScripts": [
      "./dist/page.js"
    ],
    "markdown.previewStyles": [
      "./dist/page.css"
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mdTree",
          "title": "HackMD Notes",
          "icon": "images/icon/activity-bar.svg"
        }
      ]
    },
    "views": {
      "mdTree": [
        {
          "id": "mdTreeItems",
          "name": "Browser Notes"
        }
      ]
    },
    "commands": [
      {
        "command": "HackMD.createCodeSnippet",
        "title": "HackMD: Create a code snippet"
      },
      {
        "command": "HackMD.login",
        "title": "Login",
        "category": "HackMD"
      },
      {
        "command": "HackMD.logout",
        "title": "Logout",
        "category": "HackMD"
      },
      {
        "command": "treeView.refreshList",
        "title": "Refresh",
        "category": "HackMD",
        "icon": {
          "light": "images/icon/light/refresh-dark.svg",
          "dark": "images/icon/dark/refresh-light.svg"
        }
      },
      {
        "command": "HackMD.showPreview",
        "title": "Open Preview",
        "category": "HackMD",
        "icon": {
          "light": "images/icon/light/view-dark.svg",
          "dark": "images/icon/dark/view-light.svg"
        }
      },
      {
        "command": "HackMD.showPreviewAndEditor",
        "title": "Open Preview to the Side",
        "category": "HackMD",
        "icon": {
          "light": "images/icon/light/column-dark.svg",
          "dark": "images/icon/dark/column-light.svg"
        }
      },
      {
        "command": "HackMD.createActiveEditorContentToHackMD",
        "title": "Create note from editor",
        "category": "HackMD"
      },
      {
        "command": "HacKMD.openNoteOnHackMD",
        "title": "Open note on HackMD",
        "category": "HackMD",
        "icon": {
          "light": "images/icon/light/Browser-dark.png",
          "dark": "images/icon/dark/Browser-light.png"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "treeView.refreshList",
          "when": "view == mdTreeItems",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "HackMD.showPreview",
          "when": "view == mdTreeItems && viewItem == file",
          "group": "inline"
        },
        {
          "command": "HackMD.showPreview",
          "when": "view == mdTreeItems && viewItem == file"
        },
        {
          "command": "HackMD.showPreviewAndEditor",
          "when": "view == mdTreeItems && viewItem == file",
          "group": "inline"
        },
        {
          "command": "HackMD.showPreviewAndEditor",
          "when": "view == mdTreeItems && viewItem == file"
        },
        {
          "command": "HacKMD.openNoteOnHackMD",
          "when": "view == mdTreeItems && viewItem == file",
          "group": "inline"
        },
        {
          "command": "HacKMD.openNoteOnHackMD",
          "when": "view == mdTreeItems && viewItem == file"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "mdTreeItems",
        "contents": "No notes found. Login first.\n[Login HackMD](command:HackMD.login)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "compile": "webpack --mode none",
    "watch": "webpack --mode development --progress --watch",
    "test-compile": "tsc -p ./",
    "pretest": "npm run compile",
    "test": "node ./dist/test/runTest.js",
    "lint": "eslint .",
    "fmt": "prettier --write ."
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/glob": "^7.1.1",
    "@types/jquery": "^3.3.30",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "abcjs": "^5.8.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.3",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "flowchart.js": "^1.12.2",
    "glob": "^7.1.4",
    "highlight.js": "^9.15.8",
    "ignore-loader": "^0.1.2",
    "imports-loader": "^4.0.1",
    "jquery": "^3.5.0",
    "js-sequence-diagrams": "git+https://github.com/Moeditor/js-sequence-diagrams.git",
    "katex": "^0.10.2",
    "lodash": "^4.17.21",
    "mermaid": "^8.4.8",
    "mini-css-extract-plugin": "^2.7.2",
    "mocha": "^6.2.3",
    "prettier": "^2.8.1",
    "prismjs": "^1.17.1",
    "raphael": "2.2.8",
    "style-loader": "^3.3.1",
    "typescript": "^4.9.4",
    "viz.js": "^2.1.2",
    "vscode-test": "^1.6.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "dependencies": {
    "@hackmd/api": "^2.2.1",
    "bootstrap3": "^3.3.5",
    "markdown-it-abbr": "^1.0.4",
    "markdown-it-container": "^2.0.0",
    "markdown-it-deflist": "^2.0.3",
    "markdown-it-ins": "^2.0.0",
    "markdown-it-mark": "^2.0.0",
    "markdown-it-mathjax": "^2.0.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "markdown-it-table-of-contents": "^0.4.4",
    "mathjax": "^3.0.1",
    "mathjax-full": "^3.0.1",
    "mobx": "^5.15.4",
    "node-fetch": "^2.6.7",
    "react": "^17.0.2",
    "react-vsc-treeview": "^0.2.3",
    "string": "git+ssh://git@github.com/hackmdio/string.js.git#a68176b3d"
  }
}
